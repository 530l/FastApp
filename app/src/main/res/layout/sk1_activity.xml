<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sk1btn"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:text="黑色" />

        <Button
            android:id="@+id/sk2btn"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:text="绿色" />

        <Button
            android:id="@+id/sk3btn"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:text="加载插件皮肤" />

        <Button
            android:id="@+id/sk4btn"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:text="加载自定义SD卡" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_big_ic" />


    <com.fastapp.view.skin.MyBLLinearLayout
        android:id="@+id/bLLinearLayout"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/common_sk1_color"
        app:bl_stroke_width="1dp" />


</LinearLayout>